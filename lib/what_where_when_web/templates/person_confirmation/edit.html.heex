<h1>Confirm account</h1>

<.form let={_f} for={:person} action={Routes.person_confirmation_path(@conn, :update, @token)}>
  <div>
    <%= submit "Confirm my account" %>
  </div>
</.form>

<p>
  <%= link "Register", to: Routes.person_registration_path(@conn, :new) %> |
  <%= link "Log in", to: Routes.person_session_path(@conn, :new) %>
</p>
